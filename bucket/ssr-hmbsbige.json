    "pre_install": [
        "function CreateFile ($name, $value = $null) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        Set-Content \"$dir\\$name\" $value -Encoding Ascii",
        "    }",
        "}",
        "CreateFile 'gui-config.json' '{}' ",
        "'pac.txt', 'user-rule.txt' | ForEach-Object { CreateFile $_ }"
    ],
    "persist": [
        "gui-config.json",
        "user-rule.txt",
        "pac.txt"
    ],
