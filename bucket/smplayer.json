{
    "homepage": "https://www.smplayer.info/",
    "description": "A free media player with built-in codecs.",
    "version": "21.8.0",
    "architecture": {
        "64bit": {
            "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/21.8.0/smplayer-portable-21.8.0.0-x64.7z",
            "extract_dir": "smplayer-portable-21.8.0.0",
            "hash": "sha1:fc3a4f384cf3fb5733b7dd784c467460451e4b92"
        },
        "32bit": {
            "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/21.8.0/smplayer-portable-21.8.0.0-win32.7z",
            "extract_dir": "smplayer-portable-21.8.0.0",
            "hash": "sha1:e772bb17060ab145c50b2aa351a4012e889f122f"
        }
    },
    "pre_install": [
        "function CreateFile ($name, $value = $null) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        Set-Content \"$dir\\$name\" $value -Encoding Ascii",
        "    }",
        "}",
        " 'mpv\\youtube-dl.exe', 'tv.m3u8', 'radio.m3u8', 'favorites.m3u8', 'hdpi.ini', 'playlist.ini', 'player_info.ini' | ForEach-Object { CreateFile $_ } "
    ],
    "persist": [
        "mpv\\youtube-dl.exe",
        "mpv\\portable_config",
        "tv.m3u8",
        "radio.m3u8",
        "favorites.m3u8",
        "hdpi.ini",
        "playlist.ini",
        "player_info.ini",
        "smplayer.ini",
        "smplayer_orig.ini"
    ],
    "bin": [
        "smplayer.exe",
        "mpv\\mpv.exe"
    ],
    "shortcuts": [
        [
            "smplayer.exe",
            "SMPlayer"
        ]
    ],
    "checkver": {
        "url": "https://www.fosshub.com/SMPlayer.html",
        "re": "dwl=smplayer-([\\d.]+)-win32"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/$version/smplayer-portable-$version.0-x64.7z",
                "extract_dir": "smplayer-portable-$version.0"
            },
            "32bit": {
                "url": "https://downloads.sourceforge.net/project/smplayer/SMPlayer/$version/smplayer-portable-$version.0-win32.7z",
                "extract_dir": "smplayer-portable-$version.0"
            }
        }
    }
}
